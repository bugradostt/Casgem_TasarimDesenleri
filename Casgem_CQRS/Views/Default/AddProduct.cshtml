@model Casgem_CQRS.CQRSPattern.Commands.CreateProductCommand

@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container  mt-5">

    <form method="post"> 
        <div class="mb-3">
            <label>Ürün Adı</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Ürün adı" />
        </div>

        <div class="mb-3">
            <label>Marka</label>
            <input type="text" class="form-control" asp-for="Brand" placeholder="Marka adı" />
        </div>

        <div class="mb-3">
            <label>Kategori</label>
            <input type="text" class="form-control" asp-for="Category" placeholder="Kategori adı" />
        </div>

        <div class="mb-3">
            <label>Stok</label>
            <input type="number" class="form-control" asp-for="Stock" placeholder="Stok" />
        </div>

        <div class="mb-3">
            <label>Fiyat</label>
            <input type="number" class="form-control" asp-for="Price" placeholder="Fiyat" />
        </div>

        <div class="mb-3">
            <a class="btn btn-danger" href="/Default/Index/">İptal</a>
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>


    </form>




</div>